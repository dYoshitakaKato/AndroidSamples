<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.RichEditTextActivity">

    <EditText
        android:id="@+id/rich_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rich_text"
        android:linksClickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/rich_edit_text_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rich_text_all"
        android:linksClickable="true"
        app:layout_constraintTop_toBottomOf="@+id/rich_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checkbox"
        android:linksClickable="true"
        app:layout_constraintTop_toBottomOf="@+id/rich_edit_text_all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bold_text"
        android:linksClickable="true"
        app:layout_constraintTop_toBottomOf="@+id/checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="clear"
        app:layout_constraintTop_toBottomOf="@+id/bold" />

</androidx.constraintlayout.widget.ConstraintLayout>